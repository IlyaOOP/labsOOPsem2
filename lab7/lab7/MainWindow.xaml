<Window x:Class="lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="67*"/>
            <RowDefinition Height="73*"/>
        </Grid.RowDefinitions>
        <local:UserControl1 x:Name="fields" Grid.Row="1" Width="200" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <local:UserControl2 Grid.Row="2" Width="200" HorizontalAlignment="Center" MouseLeftButtonDown="onClick"/>
    </Grid>
</Window>
