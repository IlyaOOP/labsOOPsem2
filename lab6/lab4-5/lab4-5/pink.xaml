<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:lab4_5.Properties">
    <Style x:Key="buttonstyle" TargetType="Button">
        <Setter Property="Background" Value="Pink"/>
        <Setter Property="BorderBrush" Value="Red"/>
    </Style>
    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="Pink" />
    </Style>
    <Style x:Key="menystyle" TargetType="Menu">
        <Setter Property="Background" Value="Pink"/>
        <Setter Property="BorderBrush" Value="Red"/>
    </Style>
    <Style x:Key="stpanelstyle" TargetType="StackPanel">
        <Setter Property="Background" Value="Pink"/>
    </Style>
    <Style x:Key="stbarstyle" TargetType="StatusBar">
        <Setter Property="Background" Value="HotPink"/>
        <Setter Property="BorderBrush" Value="Pink"/>
    </Style>
    <Style x:Key="toolbarstyle" TargetType="ToolBar">
        <Setter Property="Background" Value="HotPink"/>
        <Setter Property="BorderBrush" Value="Pink"/>
    </Style>
</ResourceDictionary>